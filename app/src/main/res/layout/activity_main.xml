<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F044C"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TravelEase"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.103" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:inputType="text"
        android:text="Nome"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="373dp" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:backgroundTint="#E4D0D0"
        android:backgroundTintMode="add"
        android:ems="10"
        android:inputType="textPassword"
        android:phoneNumber="false"
        android:text="Senha"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFEFE"
        android:textCursorDrawable="@drawable/ic_launcher_foreground"
        app:circularflow_angles="100"
        app:circularflow_defaultAngle="100"
        app:circularflow_radiusInDP="100"
        app:circularflow_viewCenter="100"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="468dp" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="E-mail"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="423dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:backgroundTint="@color/black"
        android:text="Cadastrar"
        android:textColor="#1B289E"
        android:textColorHighlight="#FF0000"
        android:textColorLink="#FF0000"
        app:iconTint="#424242"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="580dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ou cadastre-se com:"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="664dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="413dp"
        android:layout_height="566dp"
        app:srcCompat="@drawable/captura_de_tela__1_"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="-115dp" />

</androidx.constraintlayout.widget.ConstraintLayout>